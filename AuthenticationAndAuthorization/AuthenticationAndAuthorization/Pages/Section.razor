@page "/section"
@attribute [Authorize(Roles = "Administrator,school")]

<h3>Section</h3>

<div class="section-buttons-container">
    <a href="newsectioninfo" class="btn btn-primary">Add New Section</a> <!-- Button to add new section -->
</div>

<table class="section-table">
    <thead>
        <tr>
            <th>Section Name</th>
            <th>Actions</th> <!-- New column for actions -->
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Section One</td>
            <td>
                <a href="editsection/1" class="btn btn-secondary btn-sm">Edit</a> <!-- Edit Button -->
                <button class="btn btn-danger btn-sm" @onclick="() => DeleteSection(1)">Del</button> <!-- Delete Button -->
            </td>
        </tr>
        <tr>
            <td>Section Two</td>
            <td>
                <a href="editsection/2" class="btn btn-secondary btn-sm">Edit</a> <!-- Edit Button -->
                <button class="btn btn-danger btn-sm" @onclick="() => DeleteSection(2)">Del</button> <!-- Delete Button -->
            </td>
        </tr>
        <tr>
            <td>Section Three</td>
            <td>
                <a href="editsection/3" class="btn btn-secondary btn-sm">Edit</a> <!-- Edit Button -->
                <button class="btn btn-danger btn-sm" @onclick="() => DeleteSection(3)">Del</button> <!-- Delete Button -->
            </td>
        </tr>
    </tbody>
</table>

<style>
    .section-table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: white; /* Matches the class page background */
        border-radius: 10px; /* Rounding corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Shadow effect */
    }

        .section-table th, .section-table td {
            padding: 10px;
            border: 1px solid #ddd; /* Light border */
            text-align: center;
        }

        .section-table th {
            background-color: #f2f2f2; /* Light grey background for header */
            border-top-left-radius: 10px; /* Rounded corners */
            border-top-right-radius: 10px; /* Rounded corners */
        }

    .section-buttons-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .btn {
        padding: 8px 15px; /* Button padding */
        border-radius: 5px; /* Rounded button corners */
        cursor: pointer;
        transition: background-color 0.3s; /* Transition for button hover */
    }

    .btn-secondary {
        background-color: #6c757d; /* Secondary button color */
        color: white; /* Text color */
    }

    .btn-danger {
        background-color: #dc3545; /* Danger button color */
        color: white; /* Text color */
    }

    .btn-primary {
        background-color: #007bff; /* Primary button color */
        color: white; /* Text color */
    }

    .btn:hover {
        opacity: 0.9; /* Slightly transparent on hover */
    }
</style>

